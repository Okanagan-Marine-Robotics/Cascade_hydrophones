
#include "xcorrDriver.h"

void xcorr (int *test1, int *test2, int *test3){
	xil_printf("Before xcorr: test1=%d, test2=%d, test3=%d\n", test1, test2, test3);
	int maxTime;
	int maxTime2;
	xcorrDriver (&maxTime, &maxTime2, test1, test2, test3);
	double t1 = maxTime;
    double t2 = maxTime2;
    double x = 1;
    double y = 1;
    double p = tan(asin(((1500.*(t1/1000000.))/(0.5))));
    double q = tan(asin(((1500.*(t2/1000000.))/(0.5))));
    x=(-0.25-0.25*(p))/(p*q-1.);
    y=(x-0.25)/p;
    printf("{delayX: {%d},delayY: {%d},x: {%f},y: {%f}}\n",maxTime, maxTime2, x, y);
}
